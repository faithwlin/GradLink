<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/MHImageView1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/face_shape"
            app:srcCompat="@drawable/m_face_oval" />

        <ImageView
            android:id="@+id/MaleHImageView1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/hair"
            app:srcCompat="@drawable/m_hair_1" />

        <ImageView
            android:id="@+id/MHImageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/MHImageView1"
            android:layout_toRightOf="@+id/MHImageView1"
            android:contentDescription="@string/face_shape"
            app:srcCompat="@drawable/m_face_oval" />

        <ImageView
            android:id="@+id/MaleHImageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/hair"
            app:srcCompat="@drawable/m_hair_2" />

        <ImageView
            android:id="@+id/MHImageView3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/MHImageView1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="531dp"
            android:contentDescription="@string/face_shape"
            app:srcCompat="@drawable/m_face_oval" />

        <ImageView
            android:id="@+id/MaleHImageView3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignTop="@+id/MHImageView3"
            android:layout_marginTop="-4dp"
            android:layout_marginBottom="531dp"
            android:contentDescription="@string/hair"
            app:srcCompat="@drawable/m_hair_3" />

        <ImageView
            android:id="@+id/MHImageView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/MHImageView2"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="211dp"
            android:layout_marginRight="211dp"
            android:layout_toEndOf="@id/MHImageView3"
            android:layout_toRightOf="@+id/MHImageView3"
            android:contentDescription="@string/face_shape"
            app:srcCompat="@drawable/m_face_oval" />

        <ImageView
            android:id="@+id/MaleHImageView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/MHImageView2"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="210dp"
            android:layout_marginRight="210dp"
            android:layout_toEndOf="@id/MHImageView3"
            android:layout_toRightOf="@+id/MHImageView3"
            android:contentDescription="@string/hair"
            app:srcCompat="@drawable/f_hair_4" />

        <ImageView
            android:id="@+id/MHImageView5"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="412dp"
            android:layout_marginEnd="213dp"
            android:layout_marginRight="213dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/face_shape"
            app:srcCompat="@drawable/m_face_oval" />

        <ImageView
            android:id="@+id/MaleHImageView5"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="412dp"
            android:layout_marginEnd="213dp"
            android:layout_marginRight="213dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/hair"
            app:srcCompat="@drawable/m_hair_5" />

        <ImageView
            android:id="@+id/MHImageView6"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="414dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/face_shape"
            app:srcCompat="@drawable/m_face_oval" />

        <ImageView
            android:id="@+id/MaleHImageView6"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="414dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@string/hair"
            app:srcCompat="@drawable/m_hair_6" />

    </RelativeLayout>
</ScrollView>

