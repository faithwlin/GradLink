<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/FHImageView1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/face_shape"
                app:srcCompat="@drawable/f_face_oval" />

            <ImageView
                android:id="@+id/HImageView1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/hair"
                app:srcCompat="@drawable/f_hair_1" />

            <ImageView
                android:id="@+id/FHImageView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@+id/HImageView1"
                android:layout_toRightOf="@+id/HImageView1"
                android:contentDescription="@string/face_shape"
                app:srcCompat="@drawable/f_face_oval" />

            <ImageView
                android:id="@+id/HImageView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/hair"
                app:srcCompat="@drawable/f_hair_2" />

            <ImageView
                android:id="@+id/FHImageView3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/HImageView1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="531dp"
                android:contentDescription="@string/face_shape"
                app:srcCompat="@drawable/f_face_oval" />

            <ImageView
                android:id="@+id/HImageView3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignTop="@+id/FHImageView3"
                android:layout_marginTop="-4dp"
                android:layout_marginBottom="531dp"
                android:contentDescription="@string/hair"
                app:srcCompat="@drawable/f_hair_3" />

            <ImageView
                android:id="@+id/FHImageView4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/FHImageView2"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="211dp"
                android:layout_marginRight="211dp"
                android:layout_toEndOf="@id/FHImageView3"
                android:layout_toRightOf="@+id/HImageView3"
                android:contentDescription="@string/face_shape"
                app:srcCompat="@drawable/f_face_oval" />

            <ImageView
                android:id="@+id/HImageView4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/HImageView2"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="210dp"
                android:layout_marginRight="210dp"
                android:layout_toEndOf="@id/FHImageView3"
                android:layout_toRightOf="@+id/HImageView3"
                android:contentDescription="@string/hair"
                app:srcCompat="@drawable/f_hair_4" />

            <ImageView
                android:id="@+id/FHImageView5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="412dp"
                android:layout_marginEnd="213dp"
                android:layout_marginRight="213dp"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/face_shape"
                app:srcCompat="@drawable/f_face_oval" />

            <ImageView
                android:id="@+id/HImageView5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="412dp"
                android:layout_marginEnd="213dp"
                android:layout_marginRight="213dp"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/hair"
                app:srcCompat="@drawable/f_hair_5" />

            <ImageView
                android:id="@+id/FHImageView6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="414dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/face_shape"
                app:srcCompat="@drawable/f_face_oval" />

            <ImageView
                android:id="@+id/HImageView6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="414dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/hair"
                app:srcCompat="@drawable/f_hair_6" />

        </RelativeLayout>
    </ScrollView>

